{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "database/scripts/**/*.sql",
        "outDir": "dist"
      },
      {
        "include": "database/migrations/**/*.sql",
        "outDir": "dist"
      },
      {
        "include": "modules/tenant/scripts/migrations/*.sql",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}